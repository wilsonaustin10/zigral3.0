FROM debian:bookworm-slim

# Prevent interactive prompts during installation
ENV DEBIAN_FRONTEND=noninteractive \
    DISPLAY=:0 \
    RESOLUTION=1920x1080x24 \
    PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1

# Install required packages
RUN apt-get update && apt-get install -y \
    python3 \
    python3-pip \
    python3-venv \
    python3-full \
    xvfb \
    x11vnc \
    python3-websockify \
    novnc \
    chromium \
    supervisor \
    nginx \
    curl \
    net-tools \
    strace \
    lsof \
    procps \
    && rm -rf /var/lib/apt/lists/*

# Create necessary directories
RUN mkdir -p /var/log/supervisor /root/.vnc /app/src/agents /app/src/common /app/src/context_manager \
    /shared /var/log/agents /app/captures/screenshots /app/captures/html

# Create a simple VNC password file
RUN mkdir -p /root/.vnc && \
    echo "zigral_vnc_secure_123" > /root/.vnc/passwd && \
    chmod 600 /root/.vnc/passwd

# Copy diagnostics and configuration
COPY docker/config/supervisord.fixed.conf /etc/supervisor/conf.d/supervisord.conf
COPY docker/scripts/diagnose.sh /usr/local/bin/diagnose.sh
COPY docker/scripts/start.sh /usr/local/bin/start.sh

# Make scripts executable
RUN chmod +x /usr/local/bin/diagnose.sh /usr/local/bin/start.sh

# Command to run diagnostics first, then try supervisor
CMD ["bash", "-c", "/usr/local/bin/diagnose.sh && exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf -n -v"] 